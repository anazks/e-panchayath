    <title>Document</title>
    <style>
        .comnt{
            width: 150px;
            height: 30x;
        }
        .comnt input{
            border: none;
            height: 30px;
        }        .submit{
            border: none;
            background-color: rgb(78, 75, 75);
            border-radius: 20px;
            width: 70px;
            color: white;
        }
    </style>
</head>
<body style="margin-top: 10px;">
    <div class="side">
          {{> usersidebar}}
    </div>
    {{#each result}}
    <div class="newsFeeds">
        <div class="top">
             <a href="">{{userName}} <i class='fas fa-user-circle'></i></a>
                <span>{{complaint}}</span>
        </div>
         <img src="/images/complaints/{{img}}" alt="">
        <div class="bottom">
            <a href="/like/{{id}}"><button class="likebtn"><i class="fa fa-thumbs-up" style="font-size:20px;color:rgb(19, 58, 217)"></i>{{like}}</button></a>
             <a href="/comment/{{id}}"><button class="cmntBTN"><i class="	far fa-comment-alt" style="font-size:20px"></i></button></a>
            

           <button class="cmntBTN"><i class="fa fa-share-alt" style="font-size:20px"></i> </button>
            
        </div>
          <div class="comnt">
            <form action="/cmnt" method="post" style="display:flex">
                <input type="text" name="cmnt" placeholder="Comments.." id="">
                <input type="hidden" value="{{id}}" name="post_id">
                <input type="submit" value="Comment" class="submit">
            </form>
    </div>
    </div> 
  
