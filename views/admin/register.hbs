
<div class="container">  
    <div class="register">

   
  <form id="contact" action="/admin/Register" method="post">
    <h3>AUTHORITY    REGISTRATION</h3>
    <h4></h4>


      <input placeholder="Your name" type="text" tabindex="1" name="name" required autofocus>
    </fieldset>
    <fieldset>
      <input placeholder="Your Email Address" type="email" name="email" tabindex="2" required>
    </fieldset>
    <fieldset>
      <input placeholder="Your Phone Number (optional)" type="tel" name="mobile" tabindex="3" required>
    </fieldset>
    <fieldset>
            <select name="gender" id="" style="width:100%;height:30px">
                <option value="Male">Male</option>
                 <option value="FeMale">FeMale</option>
            </select>
    </fieldset>
    <fieldset>
                  <input placeholder="State" type="text"  name="state" tabindex="3" required>
    </fieldset>
     <fieldset>
                  <input placeholder="District" name="district" type="text" tabindex="3" required>
    </fieldset>
     <fieldset>
                 <select name="ward" id="" style="width:100%;height:30px">
                    <option value="">Select ward</option>
                      <option value="1">1</option>
                        <option value="2">2</option>
                          <option value="3">3</option>
                            <option value="4">4</option>
                              <option value="5">5</option>
                                <option value="6">6</option>
                                  <option value="7">7</option>
                 </select>
    </fieldset>
    <fieldset>
            <select name="position" id="" style="width:100%;margin-top:10px">
                    <option value="Ward_member">Ward Member</option>
                    <option value="addlPanchayathDirector">Addl Panchayth Director</option>
                    <option value="addlPanchayathDirector">Grma panchayath secretary</option>

            </select>
    </fieldset>
    <fieldset>
                  <input placeholder="Password" type="password" name="password"  tabindex="3" style="width:100%;height:30px;margin-top:10px" required>
    </fieldset>
    <fieldset>
      <button type="submit" id="contact-submit" data-submit="...Sending" style="margin-top: 10px;">Submit</button>
    </fieldset>
    <p class="copyright">Already have an account?<a href="admin/Login" target="_blank" title="Colorlib">Login</a></p>
  </form>
   </div>
</div>



